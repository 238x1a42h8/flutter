Question 8: Create a Flutter app with two screens, each displaying a numerical value in its user interface. Upon pressing a floating action button on the home page, the value of the number will increase for both screens. Add navigation to switch between the two screens to observe the results. 
source code:
import 'package:flutter/material.dart';

void main() {
  runApp(const TwoScreensApp());
}

class TwoScreensApp extends StatelessWidget {
  const TwoScreensApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: HomeScreen(),
    );
  }
}

class HomeScreen extends StatefulWidget {
  const HomeScreen({super.key});

  @override
  State<HomeScreen> createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  int number = 0; // Shared number

  void incrementNumber() {
    setState(() {
      number++;
    });
  }

  void navigateToSecondScreen() {
    Navigator.push(
      context,
      MaterialPageRoute(
        builder: (context) => SecondScreen(number: number),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Home Screen'),
        centerTitle: true,
      ),
      body: Center(
        child: Text(
          'Number: $number',
          style: const TextStyle(fontSize: 40),
        ),
      ),
      floatingActionButton: Column(
        mainAxisSize: MainAxisSize.min,
        children: [
          FloatingActionButton(
            heroTag: 'incrementBtn',
            onPressed: incrementNumber,
            child: const Icon(Icons.add),
            tooltip: 'Increment Number',
          ),
          const SizedBox(height: 10),
          FloatingActionButton(
            heroTag: 'navigateBtn',
            onPressed: navigateToSecondScreen,
            child: const Icon(Icons.navigate_next),
            tooltip: 'Go to Second Screen',
          ),
        ],
      ),
    );
  }
}

class SecondScreen extends StatelessWidget {
  final int number;

  const SecondScreen({super.key, required this.number});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Second Screen'),
        centerTitle: true,
      ),
      body: Center(
        child: Text(
          'Number: $number',
          style: const TextStyle(fontSize: 40),
        ),
      ),
    );
  }
}
