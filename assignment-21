Question 07: Build a Flutter application where pressing a button will change the color of all text widgets within the application.  
source code:
import 'package:flutter/material.dart';

void main() {
  runApp(const TextColorChangerApp());
}

class TextColorChangerApp extends StatelessWidget {
  const TextColorChangerApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: TextColorChangerScreen(),
    );
  }
}

class TextColorChangerScreen extends StatefulWidget {
  const TextColorChangerScreen({super.key});

  @override
  State<TextColorChangerScreen> createState() => _TextColorChangerScreenState();
}

class _TextColorChangerScreenState extends State<TextColorChangerScreen> {
  // Initial text color
  Color textColor = Colors.black;

  // List of colors to toggle between
  final List<Color> colors = [Colors.black, Colors.red, Colors.blue, Colors.green];
  int colorIndex = 0;

  void changeTextColor() {
    setState(() {
      // Cycle through colors list
      colorIndex = (colorIndex + 1) % colors.length;
      textColor = colors[colorIndex];
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Text Color Changer'),
        backgroundColor: Colors.deepPurple,
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              'Hello, this is text 1!',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 20),
            Text(
              'And here is some more text 2.',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 20),
            Text(
              'Text 3 is here too!',
              style: TextStyle(fontSize: 24, color: textColor),
            ),
            const SizedBox(height: 40),
            ElevatedButton(
              onPressed: changeTextColor,
              child: const Text(
                'Change Text Color',
                style: TextStyle(fontSize: 18),
              ),
              style: ElevatedButton.styleFrom(
                padding: const EdgeInsets.symmetric(horizontal: 30, vertical: 15),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
